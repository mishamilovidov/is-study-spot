@model IEnumerable<ISStudySpot.Models.SemesterClasses>

@{
    foreach (var item in Model)
    {
        ViewBag.Semester = item.SemesterName;
    }

    ViewData["Title"] = @ViewBag.Semester;
}

<div class="jumbotron">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
            @foreach (var item in Model)
            {
                ViewBag.ID = item.ClassId;
                <div class="col-lg-6 buttonspacing">
                   <div class="well text-center"> 
                    <h4>@Html.DisplayFor(modelItem => item.SubjectCode)</h4> 
                    <h3 class="subject-name">@Html.DisplayFor(modelItem => item.SubjectName)</h3>
                    <h5>Professor @Html.DisplayFor(modelItem => item.TeachFirstName) @Html.DisplayFor(modelItem => item.TeachLastname)</h5>
                    <a asp-controller="classes" asp-action="studyresources" asp-route-id="@ViewBag.ID">
                        <button type="button" class="btn btn-default">Study resources</button>  
                    </a>
                   </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>





           

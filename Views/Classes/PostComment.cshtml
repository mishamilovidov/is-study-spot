@model ISStudySpot.Models.CommentView

@inject Stormpath.SDK.Account.IAccount Account

@{
    ViewData["Title"] = @ViewBag.ClassNoteTitle;

    ViewBag.Email = Account.Email;
    ViewBag.GivenName = Account.GivenName;
    ViewBag.Surname = Account.Surname;
}

<div class="jumbotron">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <h5 class="text-center">Submitted by @ViewBag.StudFirstName @ViewBag.StudLastName - @ViewBag.ClassNoteCreateDate</h5>

    <form asp-controller="classes" asp-action="postComment" asp-route-id="@ViewBag.ClassNoteId" asp-route-username="@ViewBag.Email" asp-route-fname="@ViewBag.GivenName" asp-route-lname="@ViewBag.Surname" method="post" class="form-horizontal" role="form">
        <div class="form-group row">
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6 well">
                            <p>@ViewBag.ClassNoteText</p>
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ClassNoteCommentText" class="control-label">Comment:</label>
                        <textarea asp-for="ClassNoteCommentText" class="form-control" rows="6"></textarea>
                        <b><span asp-validation-for="ClassNoteCommentText" class="text-danger"></span></b>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Post Comment" id="validate" class="btn btn-primary pull-right" style="width:100%;margin-top:15px;"></input>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
